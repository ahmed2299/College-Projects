<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_child">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonDate"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_border"
                android:textColor="#000"
                android:enabled="false"
                android:text="22:30"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/button_border"
                android:textColor="#000"
                android:id="@+id/buttonHomeTeamName"
                android:text="HomeTeam"
                app:layout_constraintBaseline_toBaselineOf="@+id/buttonDate"
                app:layout_constraintStart_toEndOf="@+id/buttonDate"
                android:enabled="false"/>

            <Button
                android:id="@+id/buttonStatus"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@drawable/button_border"
                android:enabled="false"
                android:text="2-2"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/buttonHomeTeamName"
                app:layout_constraintStart_toEndOf="@+id/buttonHomeTeamName" />


            <Button
                android:id="@+id/buttonAwayTeamName"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/button_border"
                android:enabled="false"
                android:text="AwayTeam"
                android:textColor="#000"
                app:layout_constraintBaseline_toBaselineOf="@+id/buttonStatus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/buttonStatus" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>